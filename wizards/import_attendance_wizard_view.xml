<odoo>
    <record id="view_import_attendance_wizard" model="ir.ui.view">
        <field name="name">import.attendance.wizard.form</field>
        <field name="model">import.attendance.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Asistencias" class="container">
                <h2 class="text-center mb-4 mt-4">Importar Asistencias</h2>
                <sheet>
                    <group class="form-group">
                        <field name="file" widget="binary" class="form-control"/>
                    </group>
                    <footer class="text-center">
                        <button string="Importar" type="object" name="procesar_registros" class="btn btn-primary"/>
                        <button string="Cancelar" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
